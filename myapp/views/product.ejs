<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo2.png" />

	<title>
		<%= product.nombre_producto %>
	</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include("./partials/header") %>

		<!-- /Header -->

		<!-- product detail -->
		<div class="container products-wrapper">
			<div class="d-flex align-items-center">
				<h2 class="products-title">
					<%= product.nombre_producto %>
				</h2>
				<p class="product-detail-description" style="margin-left:auto">
					<a href="/productos/edit/<%= idProducto %>">Editar</a>
				</p>
			</div>

			<div class="product-detail">
				<div class="row">
					<article class="col-12 col-lg-8 product-detail-info">
						<img src="/images/<%= product.nombre_archivo %>" alt="<%= product.nombre_producto %>"
							class="product-detail-img">
						<p class="product-detail-description">
							<%= product.descripcion_producto %>
						</p>
					</article>

					<div class="col-12 col-lg-4">
						<section class="comments">
							<% for (let i=0; i < product.comment.length; i++) { %>
								<article>
									<img src="/images/users/profile-default.png" alt="">
									<div class="data">
										<p class="user">
											<strong><a href="/users">
													<%= product.comment[i].usuario %>:
												</a></strong>
											<%= product.comment[i].comentario %>
										</p>
									</div>
								</article>
								<% } %>
						</section>
						<form class="form" action="" method="POST">
							<input class="form-input" type="text" value="" placeholder="Agregar comentario">
							<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
						</form>
						<hr>
					</div>
				</div>
			</div>
		</div>
		<!-- /product detail -->

		<!-- footer -->
		<%- include("./partials/footer") %>

			<!-- /footer -->

</body>

</html>