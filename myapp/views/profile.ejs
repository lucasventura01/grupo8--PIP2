<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include("./partials/header") %>

		<!-- /Header -->

		<!-- Datos del usuario -->
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src="/images/users/<%= usuario.foto_perfil %>" alt="<%= usuario.username %>"
						class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title">
							<%= usuario.username %>
						</h1>
						<a class="btn mt-3 ml-4" href="#">SEGUIR</a>
					</div>
					<div>
						<ul>
							<li>
								<%= usuario.email %>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
		<!-- /Datos del usuario -->


		<!-- Mis productos -->
		<section class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>

				<% for (let i=0; i < productos.length; i++) { const p=productos[i]; %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/productos/<%= i %>">
								<figure class="product-box_image">
									<img src="/images/<%= p.imagen %>" alt="<%= p.nombre %>">
								</figure>
								<article class="product-box_data">
									<h2>
										<%= p.nombre %>
									</h2>
									<p>
										<%= p.descripcion %>
									</p>
									<p>Comentarios: <%= p.comentarios.length %>
									</p>
								</article>
							</a>
						</section>
					</div>
					<% } %>
			</div>
		</section>

		<!-- /Mis productos -->


		<!-- footer -->
		<%- include("./partials/footer") %>

			<!-- /footer -->
</body>

</html>