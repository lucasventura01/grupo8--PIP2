<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo2.png" />

	<title> Scent club</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include("./partials/header") %>

		<!-- /Header -->

		<section class="info-usuario container products-wrapper">
			<div class="row">
			  <div class="img-container offset-3 col-2">
				<img
				  src="/images/users/<%= usuario.foto_perfil || 'profile-default.png' %>"
				  alt="<%= usuario.username || usuario.name || usuario.email %>"
				  class="foto-perfil"
				/>
			  </div>
			  <div class="data-container col-6">
				<div class="d-flex align-items-center">
				  <h1 class="main-title">
					<%= usuario.username || usuario.name || 'Usuario' %>
				  </h1>
				  <a class="btn mt-3 ml-4" href="#">SEGUIR</a>
				</div>
				<ul class="mt-2">
				  <li><%= usuario.email %></li>
				  <li>Total de productos cargados: <%= cantidad %></li>
				</ul>
			  </div>
			</div>
		  </section>
		
		  <!-- Mis productos -->
		  <section class="container products-wrapper">
			<div class="row">
			  <div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			  </div>
		
			  <% if (!productos || productos.length === 0) { %>
				<div class="col-12">
				  <p>No cargaste ningún producto todavía.</p>
				</div>
			  <% } else { %>
				<% productos.forEach(function(p) { %>
				  <div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
					  <a href="/productos/<%= p.id %>">
						<figure class="product-box_image">
						  <img src="/images/<%= p.imagen %>" alt="<%= p.nombre %>" />
						</figure>
						<article class="product-box_data">
						  <h2><%= p.nombre %></h2>
						  <p><%= p.descripcion || p.descripcion_corta || '' %></p>
						  <% if (p.comentarios && Array.isArray(p.comentarios)) { %>
							<p>Comentarios: <%= p.comentarios.length %></p>
						  <% } %>
						</article>
					  </a>
					</section>
				  </div>
				<% }) %>
			  <% } %>
			</div>
		  </section>

		<!-- /Mis productos -->


		<!-- footer -->
		<%- include("./partials/footer") %>

			<!-- /footer -->
</body>

</html>