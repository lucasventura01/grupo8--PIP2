<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo2.png" />

	<title> Scent club</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include("./partials/header") %>

		<!-- /Header -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Agregar productos</h2>
				</div>
				<form class="formularios" action="/productos/add" method="post">
					<div>
						<label for="nombre">Nombre del perfume</label>
						<input id="nombre" name="nombre" type="text" required placeholder="Ej: Bleu de Chanel" />
					</div>

					<div>
						<label for="marca">Marca</label>
						<input id="marca" name="marca" type="text" required placeholder="Ej: Chanel" />
					</div>

					<div>
						<label for="familia">Familia olfativa</label>
						<select id="familia" name="familia" required>
							<option value="">Seleccioná una</option>
							<option value="citrica">Cítrica</option>
							<option value="floral">Floral</option>
							<option value="ambar-oriental">Ámbar / Oriental</option>
							<option value="amaderada">Amaderada</option>
							<option value="aromatica">Aromática</option>
							<option value="fougere">Fougère</option>
							<option value="gourmand">Gourmand</option>
							<option value="acuatica">Acuática</option>
							<option value="chipre">Chipre</option>
						</select>
					</div>

					<div>
						<label for="concentracion">Concentración</label>
						<select id="concentracion" name="concentracion" required>
							<option value="">Seleccioná una</option>
							<option value="edc">Eau de Cologne (EdC)</option>
							<option value="edt">Eau de Toilette (EdT)</option>
							<option value="edp">Eau de Parfum (EdP)</option>
							<option value="parfum">Parfum / Extrait</option>
						</select>
					</div>

					<div>
						<label for="descripcion">Descripción</label>
						<textarea id="descripcion" name="descripcion"  placeholder="Describí el perfume..."></textarea>
					</div>
					<div>
						<label for="imagenUrl">Imagen (URL)</label>
						<input id="imagenUrl" name="imagenUrl" type="text" placeholder="perfume.jpg" />
					</div>

					<div>
						<label for="notasSalida">Notas de salida (opcional)</label>
						<input id="notasSalida" name="notasSalida" type="text" placeholder="Ej: limón, bergamota" />
					</div>

					<div>
						<label for="notasCorazon">Notas de corazón (opcional)</label>
						<input id="notasCorazon" name="notasCorazon" type="text"
							placeholder="Ej: jazmín, nuez moscada" />
					</div>

					<div>
						<label for="notasFondo">Notas de fondo (opcional)</label>
						<input id="notasFondo" name="notasFondo" type="text" placeholder="Ej: cedro, incienso" />
					</div>

					<button type="submit">Agregar perfume</button>
				</form>


				<!-- footer -->
				<%- include("./partials/footer") %>

					<!-- /footer -->
</body>

</html>