<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />
  <title>Mercado Liebre Argentina</title>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
  <!-- Bootstrap Grid -->
  <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
  <!-- Own Styles -->
  <link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
  <!-- Header -->
  <%- include('partials/header') %>
  <!-- /Header -->

  <!-- Banner -->
  <div class="banner">
    <img src="/images/img-home-banner.jpg" alt="Banner de ofertas">
  </div>
  <!-- /Banner -->

  <!-- Listado de productos -->
  <div class="container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h2 class="products-title">Productos</h2>
      </div>

      <% for (let i = 0; i < productos.length; i++) { 
           const p = productos[i]; %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/<%= i %>">
              <figure class="product-box_image">
                <img src="/images/<%= p.imagen %>" alt="<%= p.nombre %>">
              </figure>
              <article class="product-box_data">
                <h2><%= p.nombre %></h2>
                <p><%= p.descripcion %></p>
                <p>Comentarios: <%= p.comentarios.length %></p>
              </article>
            </a>
          </section>
        </div>
      <% } %>
    </div>
  </div>

  <!--Footer-->
  <%- include('partials/footer') %>
  <!-- /Footer -->
</body>
</html>
